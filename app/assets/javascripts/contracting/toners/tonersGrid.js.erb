function tonersGrid(domelement, url) {
  if (w2ui[domelement] != undefined) {
    w2ui[domelement].destroy()
  }

  $('#' + domelement).w2grid({
    name: domelement,
    multiSelect : false,
    method: 'GET',
    show: { toolbar: true, footer: true },

    columns: [
      { field: 'recid', caption: I18n.t("attributes.id"), size: '50px', sortable: true, attr: "align=right" },
      { field: 'article_number', caption: I18n.t("attributes.product_number"), size: '100px', sortable: true },
      { field: 'vendor_number', caption: I18n.t("attributes.vendor_number"), size: '100px', sortable: true },
      { field: 'description', caption: I18n.t("attributes.description"), size: '250px', sortable: true },
      { field: 'price', caption: I18n.t("attributes.price"), size: '100px', render: 'currency' },
      { field: 'created_at', caption: I18n.t("attributes.created_at"), size: '130px', sortable: true,
        render: 'datetime:dd.mm.yyyy|hh24:mm:ss' },
      { field: 'updated_at', caption: I18n.t("attributes.updated_at"), size: '130px', sortable: true,
        render: 'datetime:dd.mm.yyyy|hh24:mm:ss' },
    ],

    searches: [
      { field: 'article_number', caption: I18n.t("attributes.name"), type: 'text' },
      { field: 'vendor_number', caption: I18n.t("attributes.name"), type: 'text' },
      { field: 'description', caption: I18n.t("attributes.name"), type: 'text' }
    ],
    sortData: [{ field: 'article_number', direction: 'asc' }]
  })

  w2ui[domelement].load(url)
  w2ui[domelement].refresh()
}