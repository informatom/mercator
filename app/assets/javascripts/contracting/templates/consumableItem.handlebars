<div class="panel panel-default" {{bind-attr class="isDirty:panel-warning:panel-default"}}>
  <div class="panel-heading">
    <h3 class="panel-title">Verbrauch {{position}}
      <div class="pull-right">
        {{#if isDirty}}
          <button class="btn btn-success btn-xs" {{action "save"}}>
            <span class="glyphicon glyphicon-save" /> Speichern
          </button>
        {{/if}}

        {{#if wantsToDelete}}
          Sind Sie sicher?
          <button class="btn btn-danger btn-xs" {{action "delete"}}>
            <span class="glyphicon glyphicon-remove" /> Löschen
          </button>
          <button class="btn btn-primary btn-xs" {{action 'toggle' 'wantsToDelete'}}>
            Abbrechen
          </button>
        {{else}}
          <button class="btn btn-danger btn-xs" {{action 'toggle' 'wantsToDelete'}}>
            <span class="glyphicon glyphicon-remove" /> Löschen
          </button>
        {{/if}}
      </div>
    </h3>
  </div>

  <div class="panel-body">
    <form class="form-horizontal row" role="form">
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Vertragsart</label>
        <div class="col-sm-6">{{input type="text" value=contractType}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Artikelnummer</label>
        <div class="col-sm-6">{{input type="text" value=productNumber}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Produktlinie</label>
        <div class="col-sm-6">{{input type="text" value=productLine}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Beschreibung</label>
        <div class="col-sm-6">{{input type="text" value=descriptionDe}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Beschreibung (EN)</label>
        <div class="col-sm-6">{{input type="text" value=descriptionEn}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Menge Gesamt (Stk.)</label>
        <div class="col-sm-6">{{input type="text" value=amount size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Reichweite (Seiten)</label>
        <div class="col-sm-6">{{input type="text" value=yield size=5}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">HEK (EUR)</label>
        <div class="col-sm-6">{{input type="text" value=wholesalePrice size=10}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Laufzeit (Monate)</label>
        <div class="col-sm-6">{{input type="text" value=term size=2}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Verbrauch 1</label>
        <div class="col-sm-6">{{input type="text" value=consumption1 size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Verbrauch 2</label>
        <div class="col-sm-6">{{input type="text" value=consumption2 size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Verbrauch 3</label>
        <div class="col-sm-6">{{input type="text" value=consumption3 size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Verbrauch 4</label>
        <div class="col-sm-6">{{input type="text" value=consumption4 size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Verbrauch 5</label>
        <div class="col-sm-6">{{input type="text" value=consumption5 size=1}}</div>
      </div>
      <div class="col-sm-3 form-group">
        <label class="col-sm-6 control-label">Verbrauch 6</label>
        <div class="col-sm-6">{{input type="text" value=consumption6 size=1}}</div>
      </div>
    </form>
  </div>
</div>