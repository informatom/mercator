$(function () {
  if (I18n.locale == "de") {
    w2utils.locale('<%= asset_path('contentmanager/de-de.json') %>')
  }
  w2utils.settings.groupSymbol = " "

  $('#contracting').w2layout({
    name: 'contracting',
    panels: [
      { type: 'top', size: 600, resizable: true, title: I18n.t("js.con.title"),
        content: "<div id='menu'></div>" +
                 "<div id='contractsGrid' style='height:100%;'></div>" },
      { type: 'left', title: I18n.t("attributes.contract"),
        resizable: true, size: 500, content: "<div id='contractForm' style='height:100%;'></div>" },
    ],
    onRender: function(event) {
      event.onComplete = function () {
        contractsGrid()
        menu()
        contractForm()
      }
    }
  })
})