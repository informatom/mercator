function conversationsGrid(domelement, url) {
  if (w2ui[domelement] != undefined) {
    w2ui[domelement].destroy()
  }

  $('#' + domelement).w2grid({
    name: domelement,
    multiSelect : false,
    method: 'GET',
    show: { toolbar: true, footer: true },

    columns: [
      { field: 'recid', caption: I18n.t("attributes.id"), size: '50px', sortable: true, attr: "align=right" },
      { field: 'name', caption: I18n.t("attributes.name"), size: '250px', sortable: true },
      { field: 'customer', caption: I18n.t("attributes.customer"), size: '250px', sortable: true },
      { field: 'consultant', caption: I18n.t("attributes.name"), size: '250px', sortable: true },
      { field: 'created_at', caption: I18n.t("attributes.created_at"), size: '130px', sortable: true,
        render: 'datetime:dd.mm.yyyy|hh24:mm:ss' },
      { field: 'updated_at', caption: I18n.t("attributes.updated_at"), size: '130px', sortable: true,
        render: 'datetime:dd.mm.yyyy|hh24:mm:ss' },
    ],

    searches: [
      { field: 'name', caption: I18n.t("attributes.name"), type: 'text' }
    ],
    sortData: [{ field: 'updated_at', direction: 'desc' }]
  })

  w2ui[domelement].load(url)
  w2ui[domelement].refresh()
}