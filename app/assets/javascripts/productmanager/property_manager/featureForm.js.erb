function featureForm() {
  $().w2form({
    name: 'featureForm',
    url: '/productmanager/relation_manager/create_feature',
    style: 'border: 0px; background-color: transparent;',
    fields: [
      { field: 'text_de', type: 'text', required: true,
        html: { caption: '<%= I18n.t("attributes.text") %> DE' } },
      { field: 'text_en', type: 'text',
        html: { caption: '<%= I18n.t("attributes.text") %> EN' } },
      { field: 'position', type: 'int',
        html: { caption: '<%= I18n.t("attributes.position") %>' } },
      { field: 'product_id', type: 'int', disabled: true,
        html: { caption: '<%= I18n.t("attributes.product") %> DE' } },
    ],
    actions: {
      "Save":
      function () {
        this.save( function() {
          w2popup.close()
          w2ui.featureForm.reload()
        })
      },
      "Cancel": function () { w2popup.close() }
    }
  })
}