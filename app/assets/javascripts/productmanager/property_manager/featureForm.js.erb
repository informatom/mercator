function featureForm() {
  $().w2form({
    name: 'featureForm',
    url: '/productmanager/property_manager/create_feature',
    style: 'border: 0px; background-color: transparent;',
    fields: [
      { field: 'text_de', type: 'text', required: true,
        html: { caption: I18n.t("attributes.text_de") } },
      { field: 'text_en', type: 'text',
        html: { caption: I18n.t("attributes.text_en") } },
      { field: 'position', type: 'int',
        html: { caption: I18n.t("attributes.position") } },
      { field: 'product_id', type: 'int', disabled: true,
        html: { caption: I18n.t("js.pm.Product.one") } },
    ],
    actions: {
      "Save":
      function () {
        this.save( function() {
          w2popup.close()
          w2ui.featuresGrid.reload()
        })
      },
      "Cancel": function () { w2popup.close() }
    }
  })
}