function propertiesGrid() {
  $('#propertiesGrid').w2grid({
    name: 'propertiesGrid',
    method: 'GET',
    multiSelect : false,
    show: { toolbar: true, footer: true },
    columns : [
      {
        field: 'recid',
        caption: '<%= I18n.t("attributes.id") %>',
        size: '50px',
        sortable: false,
        hidden: true ,
        attr: "align=center"
      }, {
        field: 'position',
        sortable: true,
        caption: '<%= I18n.t("attributes.position") %>',
        size: '20'
      }, {
        field: 'name',
        sortable: true,
        caption: '<%= I18n.t("attributes.name") %>',
        size: '100%'
      }
    ]
  })
}