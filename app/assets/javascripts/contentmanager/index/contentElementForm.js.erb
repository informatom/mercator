function contentElementForm() {
  $().w2form({
      name: 'contentElementForm',
      url: 'contentmanager/front/content_element',
      fields : [
        { field: 'name_de', type: 'text', required: true,
          html: { caption: '<%= I18n.t("attributes.name_de") %>'} },
        { field: 'name_en', type: 'text',
          html: { caption: '<%= I18n.t("attributes.name_en") %>'} },
        { field: 'markup', type: 'text',
          html: { caption: '<%= I18n.t("attributes.markup") %>'} },
        { field: 'content_de', type: 'textarea',
          html: { caption: '<%= I18n.t("attributes.content_de") %>'} },
        { field: 'content_en', type: 'textarea',
          html: { caption: '<%= I18n.t("attributes.content_en") %>'} },
        { field: 'document', type: 'file',
          html: { caption: '<%= I18n.t("attributes.document") %>'},
          options: { max: 1 } },
        { field: 'photo', type: 'file', width: 250,
          html: { caption: '<%= I18n.t("attributes.photo") %>'},
          options: { max: 1 } },
      ],
      actions: {
        'Cancel': function () { w2popup.close() },
        'Clear':  function () { this.clear() },
        'Save':   function (event) { this.save() }
      },
      postData: { authenticity_token: csrf_token },
      onSave: function(event) {
        w2popup.close()
        // grid reload
      }
  })
}