$white: #fff
$blue: #012E4F

@font-face
  font-family: Glypha
  src: url(<%= asset_path 'front/glypha.ttf' %>)

.eightypercent
  background-size: 80% !important
  background-repeat: no-repeat !important
  background-position: center top !important

.double
  height: 4px
  border: 2px

.glow
  border: 2px solid #ddd
  box-shadow: 5px 0 12px #ddd
  -moz-box-shadow: 5px 0 12px #ddd
  -webkit-box-shadow: 5px 0 12px #ddd
  padding: 30px

.double
  height: 6px
  border: 2px #000 solid
  width: 90%

.navigation
  li
    background-color: $blue
    a
      span
        color: $white


