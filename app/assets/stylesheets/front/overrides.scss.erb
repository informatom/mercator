$white: #fff;
$blue: #012E4F;
$light-blue: #5B819F;
$red: #B10D28;
$dark-red: #98000F;

@font-face { font-family: Glypha;
             src: url(<%= asset_path 'front/glypha.ttf' %>); }

.double { height: 4px;
          border: 2px; }

.glow { border: 2px solid #ddd;
        box-shadow: 5px 0 12px #ddd;
        -moz-box-shadow: 5px 0 12px #ddd;
        -webkit-box-shadow: 5px 0 12px #ddd;
        padding: 30px; }

.double { height: 6px;
          border: 2px #000 solid;
          width: 90%; }

ul.dropdown-menu li a,
ul.dropdown-menu li a:hover,
ul.navigation.nav li a { background-color: $blue;
                         color: $white; }

.dropdown-menu { background-color: $blue;
                 margin: 14px 0 0;}
ul.navigation.nav li a:hover,
ul.navigation.nav li.open > a,
ul.dropdown-menu li > a:hover { background-color: $light-blue;
                                background-image:none; }

// Drop Down Triale, source: http://red-team-design.com/css3-dropdown-menu/
ul.navigation.nav li ul.dropdown-menu li:first-child a:after { content: '';
                                                               position: absolute;
                                                               left: 20px;
                                                               top: -14px;
                                                               width: 0;
                                                               height: 0;
                                                               border-left: 5px solid transparent;
                                                               border-right: 12px solid transparent;
                                                               border-bottom: 14px solid $blue; }
//ul.navigation.nav li ul.dropdown-menu li:first-child a:hover:after {border-bottom-color: $light-blue; }

.label-danger { background-color: $red; }
.label-danger:hover,
.label-danger:focus { background-color: $dark-red; }

div.mask { width: 80%;
           height: 100%;
           position: absolute;
           left: 50%;
           -webkit-transform: translate(-50%, -50%);
           -ms-transform: translate(-50%, -50%);
           transform: translate(-50%, -50%);
           top: 50%; }

div.mask:hover { -webkit-box-shadow: inset 0 0 100px #000;
                 -moz-box-shadow:   inset 0 0 100px #000;
                 box-shadow:        inset 0 0 100px #000; }

img.mask { position: absolute;
           top: 50%;
           width: 80%;
           display: inline;
           left: 50%;
           -webkit-transform: translate(-50%, -50%);
           -ms-transform: translate(-50%, -50%);
           transform: translate(-50%, -50%);
           height: 100%;
           z-index: -1; }

.navbar { background-image:none; }
.navbar-default { border: 0px;
                  background-color: $white;
                  -webkit-box-shadow: none;
                  -moz-box-shadow: none;
                  box-shadow: none; }

.basket:hover,
.basket:focus { text-decoration:none }