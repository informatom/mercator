$white: #fff;
$dark-blue: #012E4F;
$blue: #5C819E;
$light-blue: #5B819F;
$red: #B10D28;
$dark-red: #98000F;
$grey: #868686;
$light-grey: #F1F1F1;
$black: #000;

$order-darkgrey: #ECECEC;
$order-lightgrey: #F9F9F9;

$front1: #D8E5EE;
$front2: #ACC0C9;
$front3: #BAC3CA;
$front4: #D5E8F7;
$front5: #CEE5F7;
$front6: #CDCED0;
$front7: #5C80A0;
$front8: #ECF0F3;
$front9: #D5D9DC;

.blue { color: $blue; }

.background1 { background-color: $front1; }
.background2 { background-color: $front2; }
.background3 { background-color: $front3; }
.background4 { background-color: $front4; }
.background5 { background-color: $front5; }
.background6 { background-color: $front6; }
.background7 { background-color: $front7; }
.background8 { background-color: $front8; }
.background9 { background-color: $front8; }

.white-border { border: 10px solid white; }

@font-face { font-family: Glypha;
             src: url(<%= asset_path 'front/glypha.ttf' %>); }

.double { height: 4px;
          border: 2px; }

.modal-lg { width: 1200px; }

.glow { border: 2px solid #ddd;
        box-shadow: 5px 0 12px #ddd;
        -moz-box-shadow: 5px 0 12px #ddd;
        -webkit-box-shadow: 5px 0 12px #ddd;
        padding: 30px;
        position: relative; }

.double { height: 6px;
          border: 2px #000 solid;
          width: 90%; }

ul.dropdown-menu li a,
ul.dropdown-menu li a:hover,
ul.navigation.nav li a { background-color: $dark-blue;
                         color: $white;
                         padding: 7px 7px 7px 7px;
                         margin: 1px;}

.dropdown-menu { background-color: $dark-blue;
                 margin: 14px 0 0;
                 border-radius: 0px;}
ul.navigation.nav li a:hover,
ul.navigation.nav li.open > a,
ul.dropdown-menu li > a:hover { background-color: $light-blue;
                                background-image: none; }

// Drop Down Triangle, source: http://red-team-design.com/css3-dropdown-menu/
ul.navigation.nav li ul.dropdown-menu li:first-child a:after { content: '';
                                                               position: absolute;
                                                               left: 20px;
                                                               top: -14px;
                                                               width: 0;
                                                               height: 0;
                                                               border-left: 5px solid transparent;
                                                               border-right: 12px solid transparent;
                                                               border-bottom: 14px solid $dark-blue; }

.label-danger { background-color: $red; }
.label-danger:hover,
.label-danger:focus { background-color: $dark-red; }

.touchpad { position: absolute;
            width: 80%;
            height: 100%;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%); }

.centeredobject { position: absolute;
                  top: 50%;
                  left: 50%;
                  -webkit-transform: translate(-50%, -50%);
                  -ms-transform: translate(-50%, -50%);
                  transform: translate(-50%, -50%); }

div.touchpad:hover { -webkit-box-shadow: inset 0 0 100px #000;
                     -moz-box-shadow:   inset 0 0 100px #000;
                     box-shadow:        inset 0 0 100px #000; }

img.touchpad { z-index: -1; }

h3.active { text-decoration: underline; }

.carousel { height: 280px; background-color: $front2; margin-top: 10px; }
.carousel-control.left, .carousel-control.right { background-image: none; }
.item { margin-left: 10px; margin-right: 10px; }
.carousel-indicators { bottom: -10px;}

.stretched { min-height: 300px; position: relative;}
.stretched-small { min-height: 150px; position: relative;}

.touchpad-text { position: absolute;
                 left: 50%;
                 -webkit-transform: translate(-50%, -50%);
                 -ms-transform: translate(-50%, -50%);
                 transform: translate(-50%, -50%);
                 top: 80%; }

.text-white { color: $white; }

.navbar { background-image:none;
          margin-bottom: 0px; }
.navbar-default { border: 0px;
                  background-color: $white;
                  -webkit-box-shadow: none;
                  -moz-box-shadow: none;
                  box-shadow: none; }

.basket:hover,
.basket:focus { text-decoration:none }

.partner-logos { position: absolute;
                 left: 0%;
                 -webkit-transform: translate(-105%, -100%);
                 -ms-transform: translate(-105%, -100%);
                 transform: translate(-105%, -100%);
                 color: $white;
                 top: 100%; }

ul.collection > li { margin-left: 0; list-style: none; }
ul.collection { margin-left: 0; padding: 0;}

.grey a { color: $grey; }

.product-card, .category-card { border: 1px solid $light-grey;
                                margin-bottom: 10px;
                                padding: 10px; }
.product-card a, .category-card a { color: $blue; }
.product-card h3, .category-card h3 { margin-top: 10px; }
.product-card h3, .category-card h2 { margin-top: 0px; }
.product-card h3 a, .category-card h2 a {color: $black; }

.product-card:hover, .category-card:hover { border: 1px solid $blue; }
.product-card:hover, .category-card:hover h3 { text-decoration: underline; }

.card-button { width: 50%; }

.nav-container { padding: 0px; }
.nav-container .container-fluid { padding-right: 0px; }
.nav-container .navbar-collapse { padding: 0px; }
.navbar .col-lg-4, .navbar .col-lg-7 { padding-right: 0px; }

// Hobo bootstrap is not yet intregrated properly
input[type=checkbox].form-control {
  margin: -10px 0px;
  width: 20px;
  box-shadow: none;
}

.well {
  background-image: none;
  background-color: #ffffff;
}

.header.well {
  border: none;
  box-shadow: none;
}

.order-darkgrey { background-color: $order-darkgrey; }
.order-lightgrey { background-color: $order-lightgrey; }

.nopadding { padding: 0px; }
.nomargin { margin: 0px; }

.twocolumned { -webkit-column-count: 2;
               -moz-column-count: 2;
                column-count: 2;
                padding-top: 20px;}

.threecolumned { -webkit-column-count: 3;
                 -moz-column-count: 3;
                  column-count: 3;
                  padding-top: 20px; }

.dontbreak  { column-break-inside : avoid;
              display: inline-block; }

h5 {font-weight: bold;}

.margin { margin: 1.5%; }

.subnav { background-color: white;}

.container.widescreen { width: 100% !important; }

.control-group { margin-bottom: 15px; }