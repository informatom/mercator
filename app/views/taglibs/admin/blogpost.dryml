<extend tag="form" for="Blogpost">
  <old-form merge>
    <field-list fields="title_de, title_en, publishing_date, content_element, blogtag-list">
    </field-list>
    <div param="actions">
      <submit label="#{ht 'blogpost.actions.save', :default=>['Save']}" param/>
      <or-cancel param="cancel"/>
    </div>
  </old-form>
</extend>