<extend tag="form" for="Category">
  <old-form merge multipart>
    <field-list: fields='name_de, name_en, description_de, description_en,
                         long_description_de, long_description_en, position, parent, categorizations,
                         document, photo'>
      <parent-view:>
          <select-menu options="&Category.all" first-option="&t('mercator.root_category')"/>
      </parent-view:>

      <categorizations-view:>
        <input-many>
          <field-list fields="product" size="5">
            <product-label: replace/>
            <product-view:>
              <name-one complete-target="&@product" completer="number_admin" autocomplete="off"/>
              <input with="&this_parent" field="position" class="col-md-2"/>
            </product-view:>
          </field-list>
        </input-many>
      </categorizations-view:>
    </field-list:>
  </old-form>
</extend>

<extend tag="show-page" for="Category">
  <old-show-page merge>
    <append-content-body:>
      <div class="form-horizontal">
        <section param="collection-section" merge>
          <h3 param="collection-heading">
            <ht key="product.collection.heading" count="&this.products.count" >
              <human-collection-name collection="products" your/>
            </ht>
          </h3>
          <sortable-collection:categorizations param>
            <card with="&this.product" />
          </sortable-collection:categorizations>
        </section>
      </div>
    </append-content-body:>
  </old-show-page>
</extend>