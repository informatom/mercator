<def tag="card" for="Offer">
  <div class="well">
    <header: param>
      <h5><name/></h5>
    </header:>
    <body: param>
      <summary-card/>
      <a action="show"
         if="&can_view?"
         param="show-link"
         class="btn btn-primary btn-sm"
         target="offer">
        <ht key="offer.actions.show">Show</ht>
      </a>
    </body:>
  </div>
</def>