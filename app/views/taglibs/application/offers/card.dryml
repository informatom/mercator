<def tag="card" for="Offer">
  <div class="well">
    <header: param>
        <a action="show" if="&can_view?" param="show-link" class="btn btn-primary btn-sm pull-right">
          <ht key="offer.actions.show">Show</ht>
        </a>
      <h4 param="heading"><name/></h4>
    </header:>
    <body: param>
      <summary-card/>
    </body:>
  </div>
</def>