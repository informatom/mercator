<def tag="card" for="Order">
  <div class="well">
    <header: param>
      <h4 param="heading"><name/></h4>
    </header:>
    <body: param>
      <summary-card/>
      <a action="show" if="&can_view?" param="show-link" class="btn btn-primary btn-small pull-right">
        <ht key="order.actions.show">Show</ht>
      </a>
      <br/>
    </body:>
  </div>
</def>