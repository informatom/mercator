<index-page>
  <title:>
    <%= Constant.find_by_key('site_name').value %>
  </title:>

  <content-header: />

  <content-body:>
    <div class="row">
      <div class="col-md-4">
        <category-list-nav />
      </div>

      <div class="col-md-8">
        <% this.in_groups_of(4) do |group| %>
          <div class="row">
            <mini-card repeat="&group"/>
          </div>
        <% end %>
      </div>
    </div>
  </content-body:>
</index-page>